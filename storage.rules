rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // Publicly readable images (optional). Adjust the path to match your needs
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User uploads under user-specific paths
    match /user_uploads/{uid}/{allPaths=**} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow delete: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
    }

    // Default: admin-only
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
